<div class="row d-flex justify-content-center mt-5">
  <div class="col text-center">
    <h1>Welcome to Linked, <%= current_user.name %>!</h1>
    <h3 class="mt-5">These are your saved links:</h3>
  </div>
</div>

<%= render partial: 'link_items/form', locals: {link_item: @new_link}%>

<div class="row d-flex justify-content-center">
  <% @links.each_slice(2) do |link_slice| %>
    <div class="row mt-5">
      <% link_slice.each do |link_item| %>
        <%= render link_item%>
      <% end %>
    </div>
  <% end %>
</div>



<div id="users" class="row d-flex justify-content-center mt-3">
  <div class="col">
    <p>
      <%= link_to "Show current user", current_user %>
    </p>
  </div>
</div>

<div class="row d-flex justify-content-center mt-3">
  <div class="col">
    <%= link_to "New user", new_user_path %>
  </div>
</div>
