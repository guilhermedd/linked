<% @img = link_item.icon != "" ? link_item.icon : "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTiN-iMIAWgPM-KJ3I0-_GxC_9oAf-N4WOaqQ&s" %>

<div id="<%= dom_id link_item %>" class="col-sm-6 mb-3 mb-sm-0">
  <div class="card">
    <div class="card-header">
      <%= link_item.name %>
    </div>
    <div class="card-body d-flex align-items-center">
      <div class="circle-icon mr-3">
        <img src="<%= @img %>" alt="<%= link_item.name %>" class="circle-icon">
      </div>
      <div class="card-link">
        <span class="input-group-text mr-2" id="basic-addon3">https://</span>
        <p class="mb-0" style="padding-left: 2%;" ><%= link_item.url %></p>
      </div>
      <a href="https://<%= link_item.url %>" class="btn btn-primary ml-auto">Visit site</a>
    </div>
  </div>
</div>
